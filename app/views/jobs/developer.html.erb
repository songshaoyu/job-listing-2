<div class="panel panel-default" style="margin-top: 50px;">
  <!-- Default panel contents -->
  <div class="panel-heading">
      <h4>开发</h4>
    </div>
</div>
  <div class="panel-body">
    <div class="container">
      <div class="row">
      <div class="group col-sm-12 col-xs-12">
    <div class="pull-right clearfix dropdown">
      <span type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"
     class="glyphicon glyphicon-option-vertical"></span>
      <ul class="dropdown-menu">
        <li><%= link_to("按照薪资下限排序", jobs_path(:order => 'by_lower_bound')) %></li>
        <li><%= link_to("按照薪资上限排序", jobs_path(:order => 'by_upper_bound')) %></li>
        <li><%= link_to("按照发表时间排序",jobs_path) %></li>
      </ul>
    </div>
    <br><br>
    <div class="table-responsive row container">
    <table class="table table-striped">
      <tr>
        <thead>
          <tr>
            <td>职缺</td>

            <td>应征人数</td>
            <td>薪资下限</td>
            <td>薪资上限</td>
            <td>招聘公司</td>
            <td>工作地点</td>
            <td>刊登时间</td>
            <td>应征</td>
          </tr>
        </thead>
      <% @jobs.each do |job| %>
      <tr>
      <td><%= link_to(job.title, job_path(job)) %></td>

      <td><%= job.resumes.count %></td>
      <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td>
       <td><%= job.company %></td>
       <td><%= job.city %></td>
      <td><%= job.created_at %></td>
      <td><%= link_to("应征", new_job_resume_path(job), :class => "btn btn-success btn-sm")%></td>

    </tr>

        <% end %>
    </table>
  </div>
</div>
</div>

</div>
