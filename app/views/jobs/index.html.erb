<div class="col-md-10 col-md-offset-1 job-content">
 <div class="btn-group select-job-box">
   <!--=== 工作地点下拉选单 ===-->
   <div class="dropdown btn-group clearfix">
     <% if params[:location].present? %>
     <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
       <%= params[:location] %> <span class="caret"></span>
     </button>
     <% else %>
     <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
       工作城市 <span class="caret"></span>
     </button>
     <% end %>
     <ul class="dropdown-menu" selection aria-labelledby="dropdownMenuDivider">
       <li>
         <%= link_to("北京", jobs_path(:location => "北京")) %>
       </li>
       <li>
         <%= link_to("上海", jobs_path(:location => "上海")) %>
       </li>
       <li>
         <%= link_to("深圳", jobs_path(:location => "深圳")) %>
       </li>
       <li>
         <%= link_to("广州", jobs_path(:location => "广州")) %>
       </li>
       <li>
         <%= link_to("杭州", jobs_path(:location => "杭州")) %>
       </li>
       <li>
         <%= link_to("成都", jobs_path(:location => "成都")) %>
       </li>
       <li>
         <%= link_to("香港", jobs_path(:location => "香港")) %>
       </li>
       <li>
         <%= link_to("海外", jobs_path(:location => "海外")) %>
       </li>
       <li>
         <%= link_to("所有城市", jobs_path(:location => "所有城市") ) %>
       </li>
     </ul>
   </div>

   <!--=== 职位类型下拉选单 ===-->
   <div class="dropdown btn-group clearfix">
     <% if params[:category].present? %>
     <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
       <%= params[:category] %> <span class="caret"></span>
     </button>
     <% else %>
     <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
       职位类型 <span class="caret"></span>
     </button>
     <% end %>
     <ul class="dropdown-menu" selection aria-labelledby="dropdownMenuDivider">
       <li>
         <%= link_to("技术", jobs_path(:category => "技术")) %>
       </li>
       <li>
         <%= link_to("产品", jobs_path(:category => "产品")) %>
       </li>
       <li>
         <%= link_to("设计", jobs_path(:category => "设计")) %>
       </li>
       <li>
         <%= link_to("运营", jobs_path(:category => "运营")) %>
       </li>
       <li>
         <%= link_to("市场", jobs_path(:category => "市场")) %>
       </li>
       <li>
         <%= link_to("销售", jobs_path(:category => "销售")) %>
       </li>
       <li>
         <%= link_to("职能", jobs_path(:category => "职能")) %>
       </li>
       <li class="fina">
         <%= link_to("金融", jobs_path(:category => "金融")) %>
       </li>
       <li>
         <%= link_to("所有类型", jobs_path(:category => "所有类型") ) %>
       </li>
     </ul>
   </div>
<div class="jobs-show-page">
  <div class="container-fluid">
  <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
<div class="pull-right clearfix dropdown">
  <span type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"
 class="glyphicon glyphicon-option-vertical"></span>
  <ul class="dropdown-menu">
    <li><%= link_to("按照薪资下限排序", jobs_path(:order => 'by_lower_bound')) %></li>
    <li><%= link_to("按照薪资上限排序", jobs_path(:order => 'by_upper_bound')) %></li>
    <li><%= link_to("按照发表时间排序",jobs_path) %></li>
  </ul>
</div>
<br><br>
<table class="table table-striped">
  <tr>
    <td>职缺</td>
    <td>种类</td>
    <td>薪资下限</td>
    <td>薪资上限</td>
    <td>招聘公司</td>
    <td>刊登时间</td>
    <td>应征</td>
  </tr>
  <% @jobs.each do |job| %>
  <tr>
  <td><%= link_to(job.title, job_path(job)) %></td>
  <td></td>
  <td><%= job.wage_lower_bound %></td>
  <td><%= job.wage_upper_bound %></td>
   <td><%= job.company %></td>
  <td><%= job.created_at %></td>
  <td><%= link_to("应征", new_job_resume_path(job), :class => "btn btn-success btn-sm")%></td>

</tr>

    <% end %>
</table>
</div>
</div>
</div>
