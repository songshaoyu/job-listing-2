<div class="container">
  <div class="row all_image">
    <div class="col-xs-6 col-md-3 image all_image_css">
      <%= link_to image_tag("developer.jpg", class: "img-rounded img-responsive img-center"), image_path(developer_jobs_path(:order => "category")) %>
      <h4 class="text-center"><%= link_to("开发", developer_jobs_path(:order => "category")) %></h4>
      <div class="overlay">
        <div class="text">
          开发
        </div>
      </div>
    </div>
    <div class="col-xs-6 col-md-3 all_image_css">
      <%= link_to image_tag("painter.jpg", class: "img-rounded img-responsive img-center"), image_path(design_jobs_path(:order => "category")) %>
      <h4 class="text-center"><%= link_to("设计", design_jobs_path(:order => "category")) %></h4>
    </div>
    <div class="col-xs-6 col-md-3 all_image_css">
      <%= link_to image_tag("ux.jpg", class: "img-rounded img-responsive img-center"), image_path(product_jobs_path(:order => "category")) %>
      <h4 class="text-center"><%= link_to("产品", product_jobs_path(:order => "category")) %></h4>
    </div>
    <div class="col-xs-6 col-md-3 all_image_css">
      <%= link_to image_tag("all_jobs.jpg", class: "img-rounded img-responsive img-center"), image_path(jobs_path) %>
      <h4 class="text-center"><%= link_to("全部", jobs_path) %></h4>
      <span class="label label-meetup label-competition-new">new</span>
    </div>
  </div>
  <hr>
  <div class="container">
    <ul class="nav navbar-nav">
      <li>
        <div class="form-group form-inline search-bar">
          <%= render :partial => 'jobs/search_bar' %>
        </div>
      </li>
    </ul>

    <div class="group col-xs-12">
      <div class="pull-right clearfix dropdown">
        <span type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" class="glyphicon glyphicon-option-vertical"></span>
        <ul class="dropdown-menu">
          <li><%= link_to("按照薪资下限排序", jobs_path(:order => 'by_lower_bound')) %></li>
          <li><%= link_to("按照薪资上限排序", jobs_path(:order => 'by_upper_bound')) %></li>
          <li><%= link_to("按照发表时间排序",jobs_path) %></li>
        </ul>
      </div>
      <br><br>
      <p>
        Jobs:</p><br>
          <% @jobs.each do |job| %>

      <div class="container">
        <div class="row">
          <div class="col-sm-2 text-center">
             <img src="https://ww3.sinaimg.cn/large/006tKfTcgy1ff7djwot30j303k03k0sj.jpg" class="img-circle" height="65" width="65" alt="Avatar">

          </div>
          <div class="col-sm-4">
            <h4><%= link_to(job.title, job_path(job)) %></h4>
            <small><%= job.created_at %></small>

          </div>
          <div class="col-sm-6">
              <span><i class="fa fa-home"  aria-hidden="true"></i>  <%= job.company %></span>
          </div>

          <div class="row">
            <div class="col-md-6">
              <p>薪资: <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </p>
            </div>
            <div class="col-md-6">
              <p></p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-3 col-sm-6">

            </div>
            <div class="col-md-3 col-sm-6">
              <span><i class="fa fa-location-arrow" aria-hidden="true"></i>  <%= job.city %></span>
            </div>

            <div class="col-md-6 col-sm-6">
              <span><i class="fa fa-envelope" aria-hidden="true"></i>  <%= job.contact_email %></span>
            </div>
          </div>
        </div>
      </div>
      <br>
      <% end %>
    </div>
  </div>
